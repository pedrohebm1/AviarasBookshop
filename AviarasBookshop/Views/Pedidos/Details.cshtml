@model AviarasBookshop.Models.Pedido

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PrecoTotal)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecoTotal)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cliente)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cliente.Nome)</dd>

        <dt class="col-sm-2">Livros</dt>
        <dd class="col-sm-10">
            @foreach (var livro in Model.Livros)
            {
                <span>@livro.Titulo</span>

                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>